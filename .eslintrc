{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jasmine": true,
    "jest": true
  },
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "no-plusplus": 0,
    "no-mixed-operators": "off",
    "no-useless-escape": 0,
    "import/extensions": 0,
    "import/no-unresolved": 0
  },
  "globals": {
    "$": true,
    "jQuery": true
  }
}
